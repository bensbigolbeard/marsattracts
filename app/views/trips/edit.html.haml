%img#helmet2{:src => "/assets/helmet.png"}

.row.form-padding
  .medium-6.columns.medium-centered    
    %h1 Confirm Before Booking
.row
  .medium-1.columns
  .medium-5.columns  
    = minimal_form_for @passenger, :url => flight_passenger_path(@passenger, :flight_id => @flight_id, :id => @passenger_id), :html => {:method => :patch} do |f|
      .row
        .medium-6.columns
          = f.input :first_name
        .medium-6.columns
          = f.input :last_name
        .dateselect
        = f.input :date_of_birth
      .row
        .medium-6.columns
          = f.input :email
        .medium-6.columns
          = f.input :phone
      = f.input :address
      = f.input :emergency_contact
      = f.submit