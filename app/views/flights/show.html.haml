.row
  .medium-6.medium-centered.columns
    %h1.show 
      Flight 
      = @flight.flight_number

.row.info
  .medium-6.medium-centered.columns
    .medium-3.columns
      Ship
      %br
      = @ship.name
    .medium-3.columns
      Ship Speed
      %br
      = @ship.speed
    .medium-3.columns
      Capacity
      %br
      = @ship.capacity
    .medium-3.columns
      Distance
      %br
      = @flight.getDistance

.row
  / .medium-2.medium-left.columns
  .medium-5.medium-offset-7.columns
    .book_it
      = link_to "Book!", new_flight_passenger_path( :flight_id => params[:id])

%img#graph{:src => @flight.getImg}

%img#spaceman{:src => "/assets/spaceman_placeholder_show.png"}

