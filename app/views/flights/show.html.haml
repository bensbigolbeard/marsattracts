.row
  .medium-6.medium-centered.columns
    %h1.show 
      Flight 
      = @flight.flight_number

.row.info
  .medium-6.medium-centered.columns
    .medium-4.columns
      Ship
      %br
      = @ship.name
    .medium-4.columns
      Ship Speed
      %br
      = @ship.speed
    .medium-4.columns
      Capacity
      %br
      = @ship.capacity

.row.weather.origin
  .medium-8.medium-centered.columns
    .medium-2.columns
      Cloud Cover
      %br
      = ForecastIO.forecast(@lat, @long).currently.cloudCover
    .medium-2.columns
      Closest Storm
      %br
      = "#{ForecastIO.forecast(@lat, @long).currently.nearestStormDistance} miles away"
    .medium-2.columns
      Humidity
      %br
      = ForecastIO.forecast(@lat, @long).currently.humidity
    .medium-2.columns
      Precipitation
      %br
      = ForecastIO.forecast(@lat, @long).currently.precipIntensity

.row
  / .medium-2.medium-left.columns
  .medium-5.medium-offset-7.columns
    .book_it
      = link_to "Book!", new_flight_passenger_path( :flight_id => params[:id])



