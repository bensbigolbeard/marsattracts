.row
  .medium-6.medium-centered.columns
    %h1.show 
      Flight 
      = @flight.flight_number

.row.info
  .medium-6.medium-centered.columns
    .medium-4.columns
      Flight ID
      %br
      00#{@ship.id}
    .medium-4.columns
      Ship Speed
      %br
      = @ship.speed
    .medium-4.columns
      Capacity
      %br
      = @ship.capacity

